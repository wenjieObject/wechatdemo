.avatar_box {
    height: 150rpx;
    width: 150rpx;
    border: 1 solid rgb(209, 199, 199);
    border-radius: 50%;
    box-shadow: 0 0 10rpx #ddd;
    position: absolute;
    left: 50%;
    padding: 10rpx;
    background-color: #fff;
    transform: translate(-50%, -50%);

}

.avatar_box image {
    width: 100%;
    height: 100%;
    border-radius: 50%;
    background-color: #eee;
  }

